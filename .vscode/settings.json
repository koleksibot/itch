// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    ".nyc_output": true,
    "node_modules": true,
    "tmp": true,
    "tests": true,
    "app": true,
    "stage": true,
    "coverage": true,
    "build": true,
    "dist": true,
    ".tscache": true,
    ".cache": true,
    "gopath": true
  },
  "files.eol": "\n",
  "editor.tabSize": 2,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "prettier.trailingComma": "es5",
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "typescript.preferences.importModuleSpecifier": "non-relative"
}